{% extends "layout.njk" %}

{% block content %}
  <form class="card" method="POST" action="/instructors?_method=PUT">
    <section 
      class="avatar" 
      style="background:url({{instructor.avatar_url}}) no-repeat center / cover">

    </section>

    <section class="details">
      <h3>Editar Instrutor</h3>

      <input 
        type="hidden" 
        name="id" 
        value="{{instructor.id}}"
      >
      {% include 'instructors/fields.njk' %}

      
    </section>
  </form>
{% endblock content %}